  <div class="jumbotron text-center">
    <h1>Scientific American News Feed</h1>
    <h2>Comments</h2>
  </div>
  {{!-- Nav bar --}}
  <div class="nav">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" id="scrape-button" href="/scrape">Scrape Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/saved">All Articles</a>
      </li>
      
      {{!-- <li class="nav-item">
        <a class="nav-link" href="/notes">Comments</a>
      </li> --}}
    </ul>

  </div>
  <br>
  <br>
<div class="card mb-3 text-center">
  <div class="row no-gutters">
    <div class="col-sm-6">
      <div class="card-body">
        <h3 class="card-title">"{{data.title}}"</h3>
      </div>
       <form class="clearfix mb-4">
              <div class="form-group">
                <label for="title-note"><h5>Title</h5></label>
                <input type="text" id="title-note" class="form-control" aria-describedby="example-text" placeholder="Title of comment">
              </div>
              <div class="form-group">
                <label for="note-description"><h5>Make a comment on the article</h5></label>
                <textarea class="form-control" id="note-description" rows="8" aria-describedby="note-description" placeholder="Your Comment"></textarea>
              </div>
              <br>
              <button class="btn btn-outline-warning" id="submit-note" data-id={{data._id}} style="padding: 5px 10px; float:right">Submit</button>
            </form>
    </div>
  </div>
</div>

<div class="card mb-3 text-center">
  <div class="row no-gutters">
    <div class="col-sm-6">
      <div class="card-body">
        <h3 class='card-title'>Previous Comments</h3>
      </div>
      <p class="card-text">
         {{#if data.note}}
            {{#each data.note}}
              <hr>
              <button class="btn btn-outline-info delete-note" data-id={{this._id}}  style="float:right">Delete</button>
              <h4><strong>{{this.title}}</strong></h4>
              <h5>{{this.body}}</h5>
              <hr>
            {{/each}}
          {{else}}
            <h5>There are no comments on this article.</h5>
          {{/if}}
      </p>
    </div>
  </div>
</div>
     