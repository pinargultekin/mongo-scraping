<div class="modal fade" id="notes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">- Notes -</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="md-form">
        {{!-- <i class="fas fa-pencil prefix grey-text"></i> --}}
        <textarea type="text" id="note-text" class="md-textarea form-control" rows="4"></textarea>
        <label data-error="wrong" data-success="right" for="note-text">Your notes</label>
      </div>
<div class="modal-footer d-flex justify-content-center">
      <button type="button" class="btn btn-outline-warning">Save</button>
    </div>
    </div>
    
