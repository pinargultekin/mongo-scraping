<div id="wrapper">
  <div class="jumbotron text-center">
    <h1>Scientific American News Feed</h1>

  </div>
  <div class="nav">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link active" href="/scrape">Scrape Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/articles">All Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/favs">Favorite Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/notes">Notes</a>
      </li>
    </ul>

  </div>
  <br>
  <br>
  <div id="articles">
    {{#each articles}}
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src={{picture}} class="card-img" alt={{title}}>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <p class="card-text summary">{{summary}}</p>
            <p class="card-text" href="{{link}}">{{link}}</p>
            <div class="card-text">
              <button type="button" class="btn btn-outline-warning favs">Add Favorites</button>
              <button type="button" class="btn btn-outline-info notes" data-toggle="modal" data-target="#notes"
                data-id="{{this._id}}" id="savenote">Add Note</button>
            </div>

            {{!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> --}}
          </div>
        </div>
      </div>
    </div>

    {{/each}}
  </div>

