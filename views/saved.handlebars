<div class="alert alert-danger alert-danger2" role="alert"  style="display: none;">
  Article is deleted.
</div>
 <div class="jumbotron text-center">
    <h1>Scientific American News Feed</h1>
    <h2>All Articles</h2>
  </div>
  {{!-- Nav bar --}}
  <div class="nav">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link active" href="/">Home</a>
      </li>
        <li class="nav-item">
        <a class="nav-link active" id="scrape-button" href="/scrape">Scrape Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/saved">All Articles</a>
      </li>
    </ul>

  </div>
  <br>
  <br>

  {{!-- Article List --}}
  <div id="articles" data-id="{{this._id}}">
    {{#each saved}}
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img  id="pic-{{@index}}" src={{picture}} class="card-img picture" alt={{title}}>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title title" id="title-{{@index}}">{{title}}</h3>
            <p class="card-text summary" id="summary-{{@index}}">{{summary}}</p>
            <a class="card-text link" id="link-{{@index}}" target="_blank" href="{{link}}">{{link}}</a>
           
            <div class="card-text">
              <button data-id={{this._id}} class="btn btn-outline-info delete-article">Delete Article</button>
                <button data-id={{this._id}} class="btn btn-outline-warning note-comment">Add Comment</button>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    </div>


